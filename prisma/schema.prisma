// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Feedback {
  id         Int      @id @default(autoincrement())
  user_id    String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  
  // Rating categories (1-5 stars)
  food                    Int
  venue                   Int
  decor                   Int
  photobooth             Int
  giveaways              Int
  emcees                 Int
  games                  Int
  department_presentations Int @map("department_presentations")
  raffle                 Int
  loyalty_awards         Int @map("loyalty_awards")
  
  // Optional fields
  comment    String?
  name       String?
  department String?
  user_agent String?

  @@map("feedback")
}
